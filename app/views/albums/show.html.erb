<h1>Album Details</h1>

<h2>Album Name -
  <%= @album.name %>
</h2>


<h3>Album Images -
  <table>
    <tbody>
      <tr>
        <% @album.images.each do |img| %>
          <td><img src="<%=img.image_url%>" width="200" height="200" /></td>
        <% end %>
    </tr>
    </tbody>
  </table>

</h3>


<%#= button_tag "Save Changes", :onclick => @album.add_image("https://i.pinimg.com/564x/46/da/e5/46dae512e375bee2664a025507da8795.jpg")%>

<%= form_tag("/image", method: "post") do %>
  <%= hidden_field_tag(:album_id, @album.id) %>
  <%= label_tag(:q, "add image:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("submit") %>
<% end %>

